# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_install_all_ios_pods(flutter_application_path)
  pod 'Flutter', :path => File.join(flutter_application_path, '.flutter-plugins')
  eval(File.read(File.join(flutter_application_path, '.flutter-plugins-dependencies')), binding)
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_application_path = File.expand_path('..', __FILE__)
flutter_install_all_ios_pods(flutter_application_path)
